/**
 * Implement hook_block_info().
 */
function ccis_block_info() {
  $blocks['filter'] = array(
    'info' => 'Station Filter',
  );
  $blocks['d3'] = array(
    'info' => 'D3 Graph',
  );
  $blocks['datatables'] = array(
    'info' => 'Datatable',
  );
  return $blocks;
}

/**
 * Implement hook_block_view().
 */
function ccis_block_view($delta) {
  $block = array();
  switch ($delta) {
    case 'filter':
      $block['subject'] = '<none>';
      $block['content'] =  _ccis_block_filter();
      break;
    case 'd3':
      $block['subject'] = '<none>';
      $block['content'] = _ccis_block_d3();
      break;
    case 'datatables':
      $block['subject'] = '<none>';
      $block['content'] = _ccis_block_datatables();
      break;
  }
  return $block;
}

