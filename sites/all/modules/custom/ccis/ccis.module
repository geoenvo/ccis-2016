  );
  $items['ccis/import'] = array(
    'title' => 'CSV Import',
    'access callback' => TRUE,
    'page callback' => 'ccis_import_page',
  );
  $items['ccis/dataquery/%'] = array(
    'title' => 'Data query',
    'access callback' => TRUE,
    'page callback' => 'ccis_dataquery_page',
    'page arguments' => array(2),
